@model List<MvcLibrary.Models.Borrow>
@{ ViewData["Title"] = "Borrow Records"; }


<h3>Borrow a Book</h3>

<form asp-action="BorrowBook" method="post">
    <label>User ID:</label>
    <input type="number" name="userId" required />
    <br />

    <label>Book ID:</label>
    <input type="number" name="bookId" required />
    <br />

    <button type="submit">Borrow</button>
</form>

<hr />

<h3>Return a Book</h3>

<form asp-action="ReturnBook" method="post">
    <label>Borrow Record ID:</label>
    <input type="number" name="recordId" required />
    <button type="submit">Return</button>
</form>

<hr />
<h3>Pay</h3>

<form asp-action="Pay" method="post">
    <label>User ID:</label>
    <input type="number" name="userId" required />
    <button type="submit">Pay</button>
</form>

<hr />

<h3> Borrow List</h3>

<table border="1" cellpadding="6">
    <tr>
        <th>ID</th>
        <th>User ID</th>
        <th>Book ID</th>
        <th>Borrow Date</th>
        <th>Return Date</th>
        <th>Returned</th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.UserId</td>
    <td>@item.BookId</td>
    <td>@item.BorrowDate.ToShortDateString()</td>
    <td>@(item.ReturnDate?.ToShortDateString() ?? "-")</td>
    <td>@item.IsReturned</td>

</tr>
}
</table>